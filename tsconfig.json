{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "public": [
                "./public/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "src/common/constants/ABI/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}